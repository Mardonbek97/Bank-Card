<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <include file="db/changelog/db.change-log-add-column.xml"/>

  <changeSet id="1" author="init">
    <createTable tableName="users">
      <column name="id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="username" type="varchar(255)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="password" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="role" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="2" author="init">
    <createTable tableName="cards">
      <column name="id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="card_number" type="varchar(512)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="owner_name" type="varchar(255)"/>
      <column name="expiry" type="varchar(7)"/>
      <column name="status" type="varchar(50)"/>
      <column name="balance" type="numeric(19,2)"/>
      <column name="user_id" type="UUID"/>
    </createTable>
  </changeSet>

  <changeSet id="3" author="init">
    <createTable tableName="transaction">
      <column name="id" type="bigserial">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="debit_id" type="UUID">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="credit_id" type="UUID"/>
      <column name="created_at" type="date"/>
      <column name="amount" type="numeric(19,2)"/>
      <column name="status" type="varchar(10)"/>
    </createTable>
  </changeSet>



</databaseChangeLog>
